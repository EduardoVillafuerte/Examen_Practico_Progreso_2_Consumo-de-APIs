@model Newtonsoft.Json.Linq.JObject

@{
    ViewBag.Title = "Detalles del Pokémon";
}

<div class="mt-4">
    <a href="@Url.Action("Index", "Pokemon")" class="btn btn-danger">Volver</a>
</div>

<h2 class="text-center text-capitalize">@Model["name"]</h2>

<div class="text-center mb-4">
    <img src="@Model["sprites"]["front_default"]" width="200" />
</div>


<div class="row d-flex justify-content-center align-content-center">
    <div class="col-md-4">
        <h4>Medidas Físicas</h4>
        <ul class="list-group">
            <li class="list-group-item text-capitalize">
                <strong>Altura: </strong> @Model["height"] dm.
            </li>
            <li class="list-group-item text-capitalize">
                <strong>Peso: </strong> @Model["weight"] hg.
            </li>
        </ul>
    </div>
</div>

<br />

<div class="row">
    <div class="col-md-4">  
        <h4>Tipos</h4>
        <ul class="list-group">
            @foreach (var t in Model["types"])
            {
                <li class="list-group-item text-capitalize">
                    @t["type"]["name"]
                </li>
            }
        </ul>
    </div>

    <div class="col-md-4">
        <h4>Habilidades</h4>
        <ul class="list-group">
            @foreach (var a in Model["abilities"])
            {
                <li class="list-group-item text-capitalize">
                    @a["ability"]["name"]
                </li>
            }
        </ul>
    </div>

    <div class="col-md-4">
        <h4>Estadísticas</h4>
        <ul class="list-group">
            @foreach (var s in Model["stats"])
            {
                <li class="list-group-item text-capitalize">
                    @s["stat"]["name"]: @s["base_stat"]
                </li>
            }
        </ul>
    </div>
</div>

